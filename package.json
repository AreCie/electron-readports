{
  "name": "electron-readports",
  "version": "1.0.0",
  "description": "Electron串口读取工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.arecie.electronreadports",
    "productName": "串口读取工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "extraResources": ["assets/"],
    "publish": [{
      "provider": "github",
      "owner": "AreCie",
      "repo": "electron-readports"
    }]
  },
  "keywords": ["electron", "serialport", "串口", "工具"],
  "author": "AreCie",
  "license": "MIT",
  "dependencies": {
    "electron": "25.0.0",
    "serialport": "11.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.3"
  }
}